<p><%= @task.name %></p>
<p><%= @task.description %></p>
<p><%= @task.points %></p>

<div>
  <%= link_to 'Mark a task as done'%>
</div>

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  Je carotte mon coloc !
</button>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Je carotte mon coloc !</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Je carotte mon coloc !
      </div>
      <div class="modal-footer">
        <%= link_to "Oui!", carotte_user_task_path(@task.current_user_task), method: :post %>
      </div>
    </div>
  </div>
</div>

<p>Carotte cost :</p> 
<p><%= @task.carotte_card_points %></p>

