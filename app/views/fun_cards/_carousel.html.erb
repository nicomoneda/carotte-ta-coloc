
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  
  <div class="carousel-inner">
    <% @fun_cards.each_with_index do |fun_card, index| %>
      <div class="carousel-item <%= 'active' if index.zero? %>">
        <%= image_tag fun_card.image, alt: 'fun_card_image', class: 'task_image_large'%> 
          <div class="show_task_name">
            <%= fun_card.name %>
          </div>
          <div class="carotte_shop_description">
            <%= fun_card.description %>
          </div>
          <div class="carotte_price_and_image">
            <div class="carotte_price">
                <%= fun_card.points %>
            </div>
            <div>
              <%= image_tag 'carotte_sans_rond.png', alt: 'task_image', class: 'carot_image' %>
            </div>
          </div>
          <button type="button" class="btn" data-toggle="modal" data-target="#modalCarotte<%= fun_card.id %>">
            Je carotte mes colocs !
          </button>
          <%= render 'modal_carotte_shop', fun_card: fun_card %>
      </div>
    <% end %>
  </div>

  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>

  <div>
    <ol class="carousel-indicators">
    <% @fun_cards.each_with_index do |fun_card, index| %>
        <li data-target="#carouselExampleIndicators" data-slide-to=<%= index.to_s %> class="active carouselbtn"></li>
    <% end %>
   </ol>
  </div>
  
</div>

